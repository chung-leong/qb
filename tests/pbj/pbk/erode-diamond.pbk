      p=float2( 1, 1);n=sampleNearest(i,c+p);if(o.r>n.r)o.r=n.r;if(o.g>n.g)o.g=n.g;if(o.b>n.b)o.b=n.b;
 
      p=float2(-2, 0);n=sampleNearest(i,c+p);if(o.r>n.r)o.r=n.r;if(o.g>n.g)o.g=n.g;if(o.b>n.b)o.b=n.b;
